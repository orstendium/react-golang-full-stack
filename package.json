{
  "name": "simple-react-full-stack",
  "version": "1.0.0",
  "description": "Boilerplate to build a full stack web application using React, Golang and Webpack.",
  "main": "src/backend/backend.go",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && go build ./src/backend/ && backend",
    "webapp": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "backend": "nodemon --ext go --exec \"cd ./src/backend && go build && backend || exit 1\"",
    "dev": "concurrently \"npm run backend\" \"npm run webapp\""
  },
  "author": "Orst Endium",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "webpack": "^4.5.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^5.2.0",
    "css-loader": "^2.0.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^2.0.4",
    "style-loader": "^0.23.0",
    "url-loader": "^1.0.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.11.0"
  }
}
